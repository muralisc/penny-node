doctype html
html(ng-app="demo")
  head
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular.js")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular-sanitize.js")
    script(src="/bower_components/angular-ui-select/dist/select.js")
    link(rel="stylesheet", href="/bower_components/angular-ui-select/dist/select.min.css")
    link(rel="stylesheet",href="http://cdnjs.cloudflare.com/ajax/libs/select2/3.4.5/select2.css")
    link(rel="stylesheet",href="http://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.8.5/css/selectize.default.css")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css")
    title= title
    //link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-controller="DemoCtrl")
    script(src="/javascripts/demo.js")
    //form(action="/categories", method="post",style="width:320px;",ng-submit="onSubmit()")
    div(style="width:320px;")
        ui-select(multiple, tagging, tagging-label="false",ng-model="transcation.fromCategory",theme="bootstrap",style="width: 320px;")
            ui-select-match(placeholder="Select colors..."){{$item}}
            ui-select-choices(repeat="color in avaibaleCategories | filter:$select.search")
                {{color}}
        input(placeholder="amount",type="number",ng-model="transcation.amount",typeahead="state for state in availableAmounts | filter:$viewValue | limitTo:8",class="form-control")
        input(placeholder="description",type="text",ng-model="transcation.description",typeahead="state for state in availableDescriptions | filter:$viewValue | limitTo:8",class="form-control")
        ui-select(multiple, tagging, tagging-label="false",ng-model="transcation.toCategory",theme="bootstrap",style="width: 320px;")
            ui-select-match(placeholder="Select colors..."){{$item}}
            ui-select-choices(repeat="color in avaibaleCategories | filter:$select.search")
                {{color}}
        p
        datepicker(ng-model="transcation.date",show-weeks="true",class="well well-sm")
        div
            button.btn.btn-primary.btn-block(type="submit") Submit
        p from: {{transcation.fromCategory}}
        p amount: {{transcation.amount}}
        p description: {{transcation.description}}
        p to: {{transcation.toCategory}}
        p date is: {{ transcation.date | date:'fullDate' }}
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.0/ui-bootstrap-tpls.min.js")
